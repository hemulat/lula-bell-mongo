<div class="all-admins-view">
  <table id="admins-table">
    <tr>
      <th>Admin</th>
    </tr>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <% if current_admin.superadmin %>
          <td><%= link_to "Remove", admin_path(admin),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this account?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
  <%= link_to "Back", root_path %>
</div>
