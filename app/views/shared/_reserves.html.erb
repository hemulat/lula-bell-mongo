<div class="reserves index">
  <table class="listing"  >
    <tr class="header">
      <th>Student ID</th>
      <th>Student Email</th>
      <th>Item Name</th>
      <th>Pick-up Date</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
    <% unless @reserves.size == 0 %>
      <% @reserves.each do |reserve| %>
      <tr>
        <td><%= reserve.student_id %></td>
        <td><%= reserve.email %></td>
        <td><%= link_to reserve.item.name, item_path(reserve.item_id) %></td>
        <td><%= reserve.start_date.strftime("%a, %B %d, %Y") %></td>
        <td><%= reserve.end_date.strftime("%a, %B %d, %Y") %></td>
        <td class="actions">
          <%= link_to("Edit", edit_reserf_path(reserve), class: "btn btn-info")%>
          <%= link_to("Check Out", checkout_reserve_path(reserve.id), class: "btn btn-success" )%>
          <%= link_to("Delete", reserf_path(reserve), method: :delete,class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this reservation?'}) %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </table>
</div>
